                                        </div>



                                        <div class="post-titless">
                                            <h6><a href="@Url.Action("Details","Blog",new {SeoUrl=item.SeoUrl})">@item.BlogName</a></h6>

                                            @if (item.BlogContent.Length > 0 && item.BlogContent.Length < 20)
                                            {<p>

                                                    @item.BlogContent.Substring(0, 10);

                                                </p>
                                            }
