                                            {
                                                <p> @item.BlogContent.Substring(0, 60); </p>
                                            }
                                            else if (item.BlogContent.Length > 80 && item.BlogContent.Length < 100)
                                            {
                                                <p> @item.BlogContent.Substring(0, 80); </p>
                                            }
                                            else if (item.BlogContent.Length > 100)
                                            {
                                                <p> @item.BlogContent.Substring(0, 100); </p>
                                            }
                                            else
                                            {
                                                <p> @item.BlogContent </p>
                                            }

                                        </div>

                                        <a href="@Url.Action("Details","Blog",new {SeoUrl=item.SeoUrl})" class="cs-readmore-btn">Devamını Oku</a>

                                    </div>

