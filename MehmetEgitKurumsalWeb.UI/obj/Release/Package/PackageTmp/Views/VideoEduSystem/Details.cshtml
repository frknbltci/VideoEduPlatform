
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/_LayoutMain.cshtml";
}
@model MehmetEgitKurumsalWeb.UI.Models.PacketDetailVM



<style>
    .btncs {
        padding: 0;
        background: #920000;
        color: #ffffff;
        padding-top: 20px;
        padding-bottom: 20px;
        padding-left: 10px;
        padding-right: 10px;
        width: 100%;
    }

        .btncs:hover {
            background: #920000;
            color: #ffffff;
            text-decoration: none;
        }
</style>



@{if (@ViewBag.yok != null)
    {
        <div><h3 class="text-center">@Html.Raw(@ViewBag.yok)</h3></div>
    }
    else
    {
        <h2>@Model.Packet.PackageName</h2>
        <div class="container">
            <div class="col-md-3">
                @foreach (var item in Model.VideoList)
                {
                    if (item.Preview == true)
                    {
                        <div id="accordion">
                            <div class="card">
                                <div class="card-header" id="headingThree">
                                    <h5 class="mb-0">
                                        <button class="btn btn-link collapsed btncs" data-toggle="collapse" data-target="#@item.ID" aria-expanded="false" aria-controls="collapseThree">
                                            @item.VideoName <span>(Tanıtım Videosu) </span>
                                        </button>
                                    </h5>
                                </div>
                                <div id="@item.ID" class="collapse" aria-labelledby="headingThree" data-parent="#accordion">
                                    <div class="card-body">
                                        @item.VideoDescription
                                    </div>

                                    <a oncontextmenu="return false" class="sendVideoId" packetId="@item.PacketID" vid="@item.ID">@item.VideoName <i class="fa fa-play " aria-hidden="true"></i></a>

                                </div>
                            </div>

                        </div>
                    }
                    else
                    {
                        if (Model.isPurch == null)
                        {
                            <div id="accordion">
                                <div class="card">
                                    <div class="card-header" id="headingThree">
                                        <h5 class="mb-0">
                                            <button class="btn btn-link collapsed btncs" data-toggle="collapse" data-target="#@item.ID" aria-expanded="false" aria-controls="collapseThree">
                                                @item.VideoName
                                            </button>
                                        </h5>
                                    </div>
                                    <div id="@item.ID" class="collapse" aria-labelledby="headingThree" data-parent="#accordion">
                                        <div class="card-body">
                                            @item.VideoDescription
                                        </div>

                                        <a oncontextmenu="return false"  class="buyPlease">@item.VideoName <i class="fa fa-play " aria-hidden="true"></i></a>

                                    </div>
                                </div>

                            </div>
                        }
                        else
                        {
                            <div id="accordion">
                                <div class="card ">
                                    <div class="card-header" id="headingThree">
                                        <h5 class="mb-0">
                                            <button class="btn btn-link collapsed btncs" data-toggle="collapse" data-target="#@item.ID" aria-expanded="false" aria-controls="collapseThree">
                                                @item.VideoName <span> </span>
                                            </button>
                                        </h5>
                                    </div>
                                    <div id="@item.ID" class="collapse" aria-labelledby="headingThree" data-parent="#accordion">
                                        <div class="card-body">
                                            @item.VideoDescription
                                        </div>

                                        <a  oncontextmenu="return false" class="sendVideoId" packetId="@item.PacketID" vid="@item.ID">@item.VideoName <i class="fa fa-play " aria-hidden="true"></i></a>

                                    </div>
                                </div>

                            </div>
                        }

                    }
                }

            </div>
            <div class="col-md-8 showVideo">


            </div>

        </div>

    }
}
