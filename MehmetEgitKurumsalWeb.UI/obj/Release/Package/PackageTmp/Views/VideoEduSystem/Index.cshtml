@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_LayoutMain.cshtml";
    MehmetEgitKurumsal.StringOperations.StringOperations operations = new MehmetEgitKurumsal.StringOperations.StringOperations();


}

@model MehmetEgitKurumsalWeb.UI.Models.PacketVM

<style>

    .card.col-md-3.addCartlist img {
        width: 100%;
        height: inherit;
    }

    .card.col-md-3.addCartlist {
        text-align: center;
        margin-bottom: 30px;
    }

    span.btn.btn-outline-blue-grey.price {
        color: #8b8681;
        font-size: 20px;
        font-weight: 700;
        margin-left: 0;
        margin-top: 3px;
    }

    a.btn.btn-warning.sendPacketId {
        color: #ffffff;
        background-image: none !important;
        text-decoration: none;
        cursor: pointer;
        padding: 11px;
        background: #920000;
        font-size: 16px;
    }

    h4.card-title.titlecs {
        margin-top: 20px;
    }
</style>

@if (((MehmetEgitKurumsal.SessionOperations.UserSessionContext)Session["UserSessionContext"]) == null)
{

    <div class="page-content col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="row">

            @foreach (var item in Model.PacketList)
            {
                if (item.PacketImgUrl == null)
                {
                    item.PacketImgUrl = "/Assets/Images/demo.png";
                }

                <div class="card col-md-3 col-xs-6 addCartlist">
                    <a href="@Url.Action("Details", "VideoEduSystem", new { SeoUrlLink = item.SeoUrlLink })">
                        <img class="card-img-top img-fluid" width="150" height="150" src="@item.PacketImgUrl"
                             alt="Card image cap">
                    </a>
                    <div class="card-body">
                        <h4 class="card-title titlecs">@item.PackageName</h4>
                        <p class="card-text">@item.PacketDesc</p>
                    </div>
                    <div class="card-body">
                        <div class="btn-group" role="group" aria-label="Basic example">
                            <span class="btn btn-outline-blue-grey price">@item.PacketPrice TL</span>
                            <a href="@Url.Action("EducationPacket", "Buy", new { SeoUrlLink = item.SeoUrlLink })" sendPacId="@item.ID" class="btn btn-warning sendPacketId">Şimdi Al<i class="ft-shopping-cart"></i></a>
                        </div>
                    </div>
                </div>


            }


        </div>
    </div>

}
else
{
    <div class="page-content col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="row">

            @foreach (var item in Model.PacketList)
            {
                if (item.PacketImgUrl == null)
                {
                    item.PacketImgUrl = "/Assets/Images/demo.png";
                }

                <div class="card col-md-3 col-xs-6 addCartlist">
                    <a href="@Url.Action("Details", "VideoEduSystem", new { SeoUrlLink = item.SeoUrlLink })">
                        <img class="card-img-top img-fluid" width="150" height="150" src="@item.PacketImgUrl"
                             alt="Card image cap">
                    </a>
                    <div class="card-body">
                        <h4 class="card-title titlecs">@item.PackageName</h4>
                        <p class="card-text">@item.PacketDesc</p>
                    </div>
                    <div class="card-body">
                        <div class="btn-group" role="group" aria-label="Basic example">
                            <span class="btn btn-outline-blue-grey price">@item.PacketPrice TL</span>
                            <a href="@Url.Action("EducationPacket", "Buy", new { SeoUrlLink = item.SeoUrlLink })" sendPacId="@item.ID" class="btn btn-warning sendPacketId">Şimdi Al<i class="ft-shopping-cart"></i></a>
                        </div>
                    </div>
                </div>

            }

        </div>
    </div>
}