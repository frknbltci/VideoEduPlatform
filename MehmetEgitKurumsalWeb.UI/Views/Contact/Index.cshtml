
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_LayoutMain.cshtml";
}
@model MehmetEgitKurumsal.DAL.DB.GeneralSetting

<h3 style="text-align:center;">İLETİŞİM</h3>


<div class="row mt-lg-5">
    
    <div class="col-md-6 col-xs-12">

        <h3  class="font-weight-light center ">

            <a href="/sikcasorulansorular" style="        text-decoration: none;
        color: #920000 !important;" >Sıkça Sorunlan Sorular</a>
        </h3>
        <h3 class="font-weight-light center"> Bize Yazın </h3>
        <h6 class="center">Aşağıdaki formu doldurarak bizimle iletişime geçebilirsiniz</h6>
        <form class="form form-horizontal" method="post" enctype="multipart/form-data" onsubmit="return ContactPost(this)">
            <div class="form-body">

                <div class="form-group row center">
                    <div class="col-sm-9 input-group col-xs-11">
                        <input required class="form-control text-bold-700" type="text" style="font-size:15px; font-family:Verdana;" placeholder="Adınız Soyadınız" name="NameSurname">

                    </div>
                </div>

                <div class="form-group row center">
                    <div class="col-sm-9 input-group col-xs-11">

                        <input required class="form-control text-bold-700" type="email" style="font-size:15px;" placeholder="Mail Adresiniz" name="Email">

                    </div>
                </div>

                <div class="form-group row center">
                    <div class="col-sm-9 input-group col-xs-11">

                        <input required class="form-control text-bold-700" type="text" style="font-size:15px;" placeholder="Telefon" name="Phone">

                    </div>
                </div>
                <div class="form-group row center">
                    <div class="col-sm-9 input-group col-xs-11">
                        <input class="form-control text-bold-700" type="text" placeholder="Konu" style="font-size:15px;" name="Topic">

                    </div>
                </div>


                <div class="form-group row center">
                    <div class="input-group col-sm-9 col-xs-11">
                        <textarea required class="form-control" style="height:150px; font-size:15px;" aria-label="With textarea" placeholder="Mesajınız" name="Message"></textarea>
                    </div>
                </div>

            </div>
            <div class="form-group row center">
                <div class="input-group col-sm-9 col-xs-11">
                    <input class="btn btn-danger btn-block" type="submit" />
                </div>
            </div>
        </form>




    </div>

    <div class="col-md-5 col-xs-11 ">

        <div id="map-container-google-1" class="z-depth-1-half map-container " style="height: 500px">

            <iframe src="@Model.GoogleMapsCode" width="600" height="450" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>

        </div>



        <div class="infocs">
            <label>Adres:</label>  @Model.Address
        </div>

        <div class="infocs">
            <label>Telefon:</label>  @Model.Phone
        </div>

    </div>



</div>



