
@{
    ViewBag.Title = "createPage";
    Layout = "~/Views/Shared/_LayoutAdminPage.cshtml";
}

<h4>Sayfa Oluşturma Ekranı</h4>
<div class="content-body">
    <section id="basic">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <a class="heading-elements-toggle"><i class="la la-ellipsis-h font-medium-3"></i></a>
                        <div class="heading-elements">
                            <ul class="list-inline mb-0">
                                <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                                <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="card-content collapse show">
                        <div class="card-body">
                            <form id="sendBlogCreateInfo">
                                <div class="form-group row justify-content-center">
                                    <div class="col-sm-8">
                                        <div class="position-relative has-icon-left">
                                            <img id="previewCreatePageImgUrl" src="/Assets/Images/noImgMan.jpg" class="img-border height-100" />
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 form-control-label" for="createPageImgUrl">Sayfa Kapak Fotoğrafı</label>
                                    <div class="col-sm-8">
                                        <div class="position-relative has-icon-left">
                                            <input class="form-control" type="file" name="createPageImgUrl" id="createPageImgUrl">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 form-control-label" for="createPageName">Sayfa Adı</label>
                                    <div class="col-sm-8">
                                        <div class="position-relative has-icon-left">
                                            <input class="form-control" type="text" placeholder="Sayfa Adı" name="createPageName" id="createPageName">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 form-control-label" for="createPageSeoUrl">Sayfa Url</label>
                                    <div class="col-sm-8">
                                        <div class="position-relative has-icon-left">
                                            <input class="form-control" required type="text" placeholder="Url Girin" name="createPageSeoUrl" id="createPageSeoUrl">
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-sm-2 form-control-label" for="createPageMetaTitle">Meta Başlığı</label>
                                    <div class="col-sm-8">
                                        <div class="position-relative has-icon-left">
                                            <input class="form-control" type="text" placeholder="Meta Başlığı" name="createPageMetaTitle" id="createPageMetaTitle">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 form-control-label" for="createPageMetaDesc">Meta Açıklaması</label>
                                    <div class="col-sm-8">
                                        <div class="position-relative has-icon-left">
                                            <input class="form-control" type="text" placeholder="Meta Açıklaması" name="createPageMetaDesc" id="createPageMetaDesc">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 form-control-label" for="createPageCat">Kategori Seç</label>
                                    <div class="col-sm-8">
                                        <fieldset class="form-group">
                                            <select class="form-control" name="CategoryID" id="createPageCat">
                                                <option value="" selected>Kategori</option>
                                               
                                                    <option value="1">Bilgi Sayfaları</option>
                                                    <option value="2">Sistem Bilgi Sayfaları</option>
                      
                                            </select>
                                        </fieldset>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <textarea name="createPageContent" id="createPageContent" cols="30" rows="15" class="ckeditor">     
							</textarea>

                                </div>
                                <button type="button" id="sendCreatePageData" class="btn btn-success justify-content-center col-xl-5">Oluştur</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
