
@{
    ViewBag.Title = "EditPage";
    Layout = "~/Views/Shared/_LayoutAdminPage.cshtml";
}

@model MehmetEgitKurumsal.UI.Models.PageVM
@{

    if (Model.strImgUrl == null)
    {
        Model.strImgUrl = "/Assets/Images/noImgMan.jpg";
    }
}
    

<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Sayfa Düzenleme Ekranı</h5>

    </div>
    <div class="modal-body ">
        <form class="form form-horizontal">
            <div class="form-group row justify-content-center">
                <div class="col-sm-8">
                    <div class="position-relative has-icon-left">
                        <img id="editPreviewPageImgUrl" src="@Model.strImgUrl" class="img-border height-100" />
                        <input id="pageEditImgHidden" type="text" value="@Model.strImgUrl" class="hidden" readonly />
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 form-control-label" for="editPageImgUrl">Sayfa  Resmi</label>
                <div class="col-sm-8">
                    <div class="position-relative has-icon-left">
                        <input class="form-control" type="file" name="editPageImgUrl" id="editPageImgUrl">
                    </div>
                </div>
            </div>

            <div class="form-body">

                <div class="form-group row">
                    <label class="col-sm-2 form-control-label" for="basicSelect">Kategori Seç</label>
                    <div class="col-sm-8">
                        <fieldset class="form-group">
                            <select class="form-control" name="CategoryID" id="selectEditPagePopUp">


                                <option value="ksm">Kategori</option>
                                @if (Model.CategoryID == 1)
                                {
                                    <option value="1" selected>Bilgi Sayfası</option>
                                    <option value="2">Sistem Bilgi Sayfası</option>
                                }
                                else if(Model.CategoryID==2)
                                {
                                    <option value="2" selected>Sistem Bilgi Sayfası</option>
                                    <option value="1">Bilgi Sayfası</option>
                                }
                                else
                                {
                                    <option value="" selected>Özel Sayfa</option>
                                }

                            </select>
                        </fieldset>
                    </div>
                </div>


                <div class="form-group row">
                    <label class="col-sm-2 form-control-label" for="editPageName">Sayfa Adı</label>
                    <div class="col-sm-8">
                        <input class="form-control row" type="text" id="editPageName" name="editPageName" value="@Model.PageName">
                    </div>
                </div>


                <div class="form-group row">
                    <label class="col-sm-2 form-control-label" for="editPageMetaTitle">Meta Başlığı</label>
                    <div class="col-sm-8">
                        <input class="form-control row" type="text" id="editPageMetaTitle" name="editPageMetaTitle" value="@Model.PageMetaTitle">
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 form-control-label" for="editPageMetaDesc">Meta Açıklaması</label>
                    <div class="col-sm-8">
                        <input class="form-control row" type="text" id="editPageMetaDesc" name="editPageMetaDesc" value="@Model.PageMetaDesc">
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 form-control-label" for="editPageUrl">Sayfa Url</label>
                    <div class="col-sm-8">

                        <input class="form-control row" type="text" id="editPageUrl" name="editPageUrl" value="@Model.PageSeoUrl">
                    </div>
                </div>

                <div class="form-group row">
                    <textarea name="PageContent" id="ckeditorEditPage" cols="30" rows="15" class="ckeditor">
                                    @Model.PageContent
                            </textarea>
                </div>
            </div>
        </form>
    </div>
    <div class="modal-footer">

        <button pageId="@Model.ID" id="pageEditSend" type="button" class="btn btn-success btn-block">Kaydet</button>
    </div>
</div>